<div id="wrapper">
	<div id="innerwrapper">
		<div class="post_index comment_index comment_show">
			<p class="title center"><%= @comment.post.title %></p>
			<p class="center"><%= @comment.post.body%></p>
			<p class ="center">
				<% if !@comment.post.link.empty?%>
					<%= link_to "Shared link!", @comment.post.link %>
				<%end%></p>
			<p>Comment:</p>

			<div class="comment">
				<p>---<%= @comment.body%></p>
				<p class="small_text">(<%= @comment.user.name %>)</p>
			</div>

					
		</div>
	</div>
</div>