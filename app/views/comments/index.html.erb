<table>
	<tr>
		<td>body</td>
		<td>post</td>
		<td>user</td>
	</tr>

	<% @comments.each do |comment| %>
		<tr>
			<td><%= comment.body %></td>
			<td><%= comment.post.title %></td>
			<td><%= comment.user.first_name unless comment.user.nil? %> <%= comment.user.last_name unless comment.user.nil? %></td>
		</tr>
	<% end %>
	
</table>
