<div id="wrapper">
	<div id="innerwrapper">
		<div class="post_index comment_index post_show">

			<div class="centered">
				<li class = "title"><%= @user.name %></li>
				 <li><%= @user.email %></li>
				 <li><%= @user.phone %></li>

				 <div>
					 <% if !Grouping.where(user_id: user.id).empty? %>
		 			 	<p>Member of Groups:</p>
			 			 <% Grouping.where(user_id: user.id).each do |groupings| %>
					 		<li><%= link_to groupings.group.group_name, {:controller => "application", :action => "search", :type => "group_name", :search => groupings.group.group_name} %></li>
					 		<%end%>
					 <%end%>
				 </div>
			
			</div>
		</div>
	</div>
</div>

