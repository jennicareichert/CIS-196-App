<div id="wrapper">
	<div id="innerwrapper">

		<%=form_for(@post) do |f| %>
			<div class="field">
				<p>Post Title</p>
				<%= f.text_field :title%>
			</div>

			<div class="field">
				<p>Body</p>
				<%= f.text_field :body%>
			</div>

			<div class="field">
				<p>Post a Link</p>
				<%= f.text_field :link%>
			</div>

			<div class="field">
				<%= f.hidden_field :user_id, :value =>current_user.id %>
			</div>

			<div class = "actions">
				<%= f.submit %>
			</div>
			
		<% end %>

	</div>
</div>