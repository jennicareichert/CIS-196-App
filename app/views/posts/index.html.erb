<div id="wrapper">
	<div id="innerwrapper">
		<div>
			<h3><%= link_to "Make A New Post", new_post_path %></h3>
		</div>

			<% @posts.each do |post| %>
				<div class="post_index">
					<p><%= link_to post.title, post_path(post.id) %></p>
					<p><%= truncate(post.body, :length => 15)%> <%= link_to "(Read More)", post_path(post.id) %></p>
					<% if !post.link.empty?%>
						<p> <a href=<%= post.link %>> Click here</a></p>
						<%end%>
					<p class="small_text"> (User: <%= post.user.name unless post.user.nil? %>)</p>
				</div>
		 	<% end %>
		
	</div>
</div>